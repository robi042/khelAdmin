<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_10sdp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent_color"
        android:gravity="right">

        <ImageView
            android:id="@+id/closeButtonID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/cross_icon"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape"
        android:orientation="vertical"
        android:padding="@dimen/_5sdp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_5sdp"
            android:text="Add Ludo match"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_5sdp"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="2">


            <Button
                android:id="@+id/ludoDateButtonID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_weight="1"
                android:background="@drawable/shape"
                android:backgroundTint="@color/default_color"
                android:text="Date"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/ludoTimeButtonID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/shape"
                android:backgroundTint="@color/default_color"
                android:text="Time"
                android:textColor="#fff"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_5sdp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/ludoTitleTextID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_box"
                android:hint="Title"
                android:singleLine="true"
                tools:ignore="TouchTargetSizeCheck" />

            <EditText
                android:id="@+id/titleNumberTextID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_box"
                android:hint="Title Number"
                android:singleLine="true"
                tools:ignore="TouchTargetSizeCheck" />

            <EditText
                android:id="@+id/totalMatchTextID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_box"
                android:hint="Total Match"
                android:singleLine="true"
                tools:ignore="TouchTargetSizeCheck" />

            <EditText
                android:id="@+id/sameTimeMatchTextID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_box"
                android:hint="Same Time Match"
                android:singleLine="true"
                tools:ignore="TouchTargetSizeCheck" />

            <EditText
                android:id="@+id/gapTimeTextID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_box"
                android:hint="Gap Time"
                android:singleLine="true"
                tools:ignore="TouchTargetSizeCheck" />

            <EditText
                android:id="@+id/ludoEntryFeeTextID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_box"
                android:hint="Entry Fee"
                android:inputType="number"
                android:singleLine="true"
                tools:ignore="TouchTargetSizeCheck" />


            <EditText
                android:id="@+id/ludoTotalPlayerTextID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_box"
                android:hint="Total Players"
                android:inputType="number"
                android:singleLine="true"
                tools:ignore="TouchTargetSizeCheck" />


            <EditText
                android:id="@+id/ludoPrizeTextID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_box"
                android:hint="Prize"
                android:inputType="number"
                android:singleLine="true"
                tools:ignore="TouchTargetSizeCheck" />

            <EditText
                android:id="@+id/ludoTypeTextID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_box"
                android:editable="false"
                android:focusable="false"
                android:hint="Type"
                android:inputType="text"
                android:singleLine="true"
                android:text="Single"
                tools:ignore="TouchTargetSizeCheck" />


            <EditText
                android:id="@+id/ludoGameTypeTextID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_box"
                android:hint="Game Type"
                android:singleLine="true"
                tools:ignore="TouchTargetSizeCheck" />
        </LinearLayout>


        <Button
            android:id="@+id/ludoSubmitButtonID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape"
            android:backgroundTint="@color/default_color"
            android:text="SUBMIT"
            android:textColor="@color/white" />

    </LinearLayout>


</LinearLayout>