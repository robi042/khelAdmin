<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_5sdp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right">

        <ImageView
            android:id="@+id/closeButtonID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/cross_icon"
            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/_5sdp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:text="Add match"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="2">


                    <Button
                        android:id="@+id/mDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:background="@drawable/shape"
                        android:backgroundTint="@color/default_color"
                        android:text="Date"
                        android:textColor="@color/white"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <Button
                        android:id="@+id/mTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/shape"
                        android:backgroundTint="@color/default_color"
                        android:text="Time"
                        android:textColor="@color/white"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_40sdp"
                    android:orientation="vertical">


                    <EditText
                        android:id="@+id/mTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edit_text_box"
                        android:hint="Title"
                        android:singleLine="true"
                        tools:ignore="TouchTargetSizeCheck" />

                    <EditText
                        android:id="@+id/mEntryFee"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"


                        android:background="@drawable/edit_text_box"
                        android:hint="Entry Fee"
                        android:inputType="number"
                        android:singleLine="true"
                        tools:ignore="TouchTargetSizeCheck" />


                    <EditText
                        android:id="@+id/mTotalPlayer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"


                        android:background="@drawable/edit_text_box"
                        android:hint="Total Players"
                        android:inputType="number"
                        android:singleLine="true"
                        tools:ignore="TouchTargetSizeCheck" />


                    <EditText
                        android:id="@+id/mTotalPrize"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"


                        android:background="@drawable/edit_text_box"
                        android:hint="Total Prize"
                        android:inputType="number"
                        android:singleLine="true"
                        tools:ignore="TouchTargetSizeCheck" />

                    <EditText
                        android:id="@+id/mPerKill"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"


                        android:background="@drawable/edit_text_box"
                        android:hint="Per Kill Point"
                        android:inputType="number"
                        android:singleLine="true"
                        tools:ignore="TouchTargetSizeCheck" />


                    <EditText
                        android:id="@+id/mMap"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"


                        android:background="@drawable/edit_text_box"
                        android:hint="map"
                        android:singleLine="true"
                        tools:ignore="TouchTargetSizeCheck" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingTop="@dimen/_2sdp"
                        android:paddingBottom="@dimen/_2sdp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Type:" />

                        <Spinner
                            android:id="@+id/typeSpinners"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@drawable/borderback"
                            tools:ignore="SpeakableTextPresentCheck" />
                    </LinearLayout>

                    <EditText
                        android:id="@+id/mVersion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edit_text_box"
                        android:hint="Version"
                        android:singleLine="true"
                        tools:ignore="TouchTargetSizeCheck" />


                    <EditText
                        android:id="@+id/mPrizeOne"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edit_text_box"
                        android:hint="Prize one"
                        android:inputType="number"
                        android:singleLine="true"
                        tools:ignore="TouchTargetSizeCheck" />

                    <EditText
                        android:id="@+id/mPrizeTwo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edit_text_box"
                        android:hint="Prize two"
                        android:inputType="number"
                        android:singleLine="true"
                        tools:ignore="TouchTargetSizeCheck" />

                    <EditText
                        android:id="@+id/mPrizeThree"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edit_text_box"
                        android:hint="Prize three"
                        android:inputType="number"
                        android:singleLine="true"
                        tools:ignore="TouchTargetSizeCheck" />

                    <EditText
                        android:id="@+id/mPrizeFour"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edit_text_box"
                        android:hint="Prize four"
                        android:inputType="number"
                        android:singleLine="true"
                        tools:ignore="TouchTargetSizeCheck" />

                    <EditText
                        android:id="@+id/mPrizeFive"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edit_text_box"
                        android:hint="Prize five"
                        android:inputType="number"
                        android:singleLine="true" />

                    <EditText
                        android:id="@+id/mPrizeSix"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edit_text_box"
                        android:hint="Prize six"
                        android:inputType="number"
                        android:singleLine="true" />

                    <EditText
                        android:id="@+id/mPrizeSeven"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edit_text_box"
                        android:hint="Prize seven"
                        android:inputType="number"
                        android:singleLine="true" />

                    <EditText
                        android:id="@+id/mPrizeEight"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edit_text_box"
                        android:hint="Prize eight"
                        android:inputType="number"
                        android:singleLine="true" />

                    <EditText
                        android:id="@+id/mPrizeNine"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edit_text_box"
                        android:hint="Prize nine"
                        android:inputType="number"
                        android:singleLine="true" />

                    <EditText
                        android:id="@+id/mPrizeTen"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edit_text_box"
                        android:hint="Prize ten"
                        android:inputType="number"
                        android:singleLine="true" />

                </LinearLayout>


            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom">

            <Button
                android:id="@+id/mBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape"
                android:backgroundTint="@color/default_color"
                android:text="SUBMIT"
                android:textColor="@color/white" />
        </LinearLayout>

    </RelativeLayout>


</LinearLayout>