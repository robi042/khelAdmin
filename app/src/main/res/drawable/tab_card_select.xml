<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <padding
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp" />
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="1dp"
                android:color="#3b5257" />
            <corners android:radius="2dp" />
        </shape>
    </item>

    <item>
        <shape>
            <solid android:color="@color/item_color" />
            <corners android:radius="10dp" />
            <gradient
                android:angle="90"
                android:centerColor="@color/default_color"
                android:endColor="@color/item_color"
                android:startColor="@color/item_color" />
        </shape>
    </item>
</layer-list>